<%= form_for @review, url: {action: url_link} do |f| %>
    <% if @review.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@review.errors.count, "error") %> prohibited this movie from being saved:</h2>

          <ul>
            <% @review.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <%= f.hidden_field :movie_id, { :value => @review.movie_id } %>
    <%= f.hidden_field :user_id, { :value => @review.user_id } %>
    <%= f.hidden_field :review_date, { :value => Time.now } %>
    <h1 class="cntr"><small><strong>Добавить отзыв к фильму "<%= @movie_title %>"</strong></small></h1>
    <div class="form-group">
      <%= f.label 'Заголовок', for: 'titleInput' %>
      <%= f.text_field :title, autofocus: true, class: 'form-control', id: 'titleInput', placeholder: 'Заголовок' %>
    </div>
    <div class="form-group">
      <%= f.label 'Отзыв', for: 'titleInput' %>
      <%= f.text_area :content, autofocus: true, class: 'form-control', id: 'titleInput', placeholder: 'Отзыв' %>
    </div>
    <div class="form-group">
      <%= f.label :recommended, class: 'titleInput' do %>
          <%= f.check_box :recommended %> Советуешь посмотреть этот фильм?
      <% end %>
    </div>

    <div class="form-group cntr">
      <%= f.submit 'Отправить', class: 'btn btn-default' %>
    </div>
<% end %>
